<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/widget_margin"
    android:background="#ffffff"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/appwidget_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:text="Feladatok"
                android:textColor="#363636"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/button_refresh"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                app:srcCompat="@drawable/ic_refresh_grey"
                style="?android:attr/borderlessButtonStyle"
                />


            <ImageButton
                android:id="@+id/button_openapp"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                app:srcCompat="@drawable/ic_open_app_grey" />
        </RelativeLayout>

        <FrameLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="#FFFFFF"
            android:id="@+id/widget_frameLayout"
            >

            <ListView
                android:id="@+id/widget_stack"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
            </ListView>

            <TextView
                android:id="@+id/widget_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Ãœres" />

        </FrameLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/widget_textView_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"
        android:text="asdasdasd"
        android:textColor="#363636"
        android:textSize="18sp"
        android:visibility="invisible" />





</RelativeLayout>