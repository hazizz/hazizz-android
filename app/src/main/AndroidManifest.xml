<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.hazizz.droid">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher2"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Light"
        android:windowSoftInputMode="adjustPan">
        <activity
            android:name=".activities.TheraActivity"
            android:label="@string/title_activity_thera"
            android:theme="@style/AppTheme.Light"/>
        <activity
            android:name=".activities.MainActivity"
            android:autoRemoveFromRecents="true"
            android:configChanges="orientation|screenSize"
            android:launchMode="singleTop"
            android:noHistory="false"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="hazizz.page.link"
                    android:scheme="https" />
                <data
                    android:host="hazizz.github.io"
                    android:scheme="https" />
                <data
                    android:host="hazizz.duckdns.org:9000"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.AuthActivity"
            android:configChanges="orientation|screenSize"
            android:noHistory="false"
            android:windowSoftInputMode="adjustPan">

        </activity>
        <activity
            android:name=".activities.FeedbackActivity"
            android:noHistory="false"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/ImageCropTheme" />

        <service
            android:name=".widget.tasks.CollectionWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <receiver
            android:name=".widget.tasks.CollectionWidgetProvider"
            android:label="@string/tasks">
            <intent-filter>
                <action android:name="com.hazizz.droid.widget.tasks.WIDGET_OPENAPPBUTTON" />
                <action android:name="com.hazizz.droid.widget.tasks.WIDGET_REFRESHBUTTON" />
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="android.appwidget.action.APPWIDGET_ENABLED" />
                <action android:name="android.intent.action.SCREEN_ON" />
                <action android:name="android.intent.action.SCREEN_OFF" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/hazizz_widget_info" />
        </receiver>
        <receiver android:name=".receiver.NetworkChangeReceiver">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
                <action android:name="android.net.wifi.WIFI_STATE_CHANGED" />
            </intent-filter>
        </receiver>
